<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"


    tools:context="com.example.hpelitebook.calculator_vl.MainActivity">

    <Button
        android:id="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:backgroundTint="@color/buttons_color"
        android:text="7"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn7"
        android:layout_alignBottom="@+id/btn7"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:backgroundTint="@color/buttons_color"
        android:text="8"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn8"
        android:layout_toEndOf="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:backgroundTint="@color/buttons_color"
        android:text="9"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn9"
        android:layout_toEndOf="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:backgroundTint="@color/buttons_color2"
        android:text="+" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn7"
        android:layout_toLeftOf="@+id/btn8"
        android:layout_toStartOf="@+id/btn8"
        android:backgroundTint="@color/buttons_color"
        android:text="4"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn7"
        android:layout_toLeftOf="@+id/btn9"
        android:layout_toStartOf="@+id/btn9"
        android:backgroundTint="@color/buttons_color"
        android:text="5"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn5"
        android:layout_alignBottom="@+id/btn5"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:backgroundTint="@color/buttons_color"
        android:text="6"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnsub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnadd"
        android:layout_toEndOf="@+id/btn6"
        android:layout_toRightOf="@+id/btn6"
        android:backgroundTint="@color/buttons_color2"
        android:text="-" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn4"
        android:layout_alignStart="@+id/btn4"
        android:layout_below="@+id/btn4"
        android:backgroundTint="@color/buttons_color"
        android:text="1"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn5"
        android:layout_toEndOf="@+id/btn4"
        android:layout_toRightOf="@+id/btn4"
        android:backgroundTint="@color/buttons_color"
        android:text="2"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnmul"
        android:layout_alignBottom="@+id/btnmul"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"
        android:backgroundTint="@color/buttons_color"
        android:text="3"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnmul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnsub"
        android:layout_toEndOf="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:backgroundTint="@color/buttons_color2"
        android:text="*" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnclear"
        android:layout_alignBottom="@+id/btnclear"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:backgroundTint="@color/buttons_color"
        android:text="0"
        android:textColor="@android:color/background_light" />

    <Button
        android:id="@+id/btnclear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn1"
        android:layout_alignStart="@+id/btn1"
        android:layout_below="@+id/btn1"
        android:backgroundTint="@color/buttons_color2"
        android:text="C" />

    <Button
        android:id="@+id/btndivide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnmul"
        android:layout_toEndOf="@+id/btn3"
        android:layout_toRightOf="@+id/btn3"
        android:backgroundTint="@color/buttons_color2"
        android:text="/" />

    <Button
        android:id="@+id/btnequal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btndivide"
        android:layout_alignRight="@+id/btndivide"
        android:layout_below="@+id/btn0"
        android:layout_toEndOf="@+id/btn0"
        android:layout_toRightOf="@+id/btn0"
        android:backgroundTint="@color/orange"
        android:padding="5pt"
        android:text="=" />

    <TextView
        android:id="@+id/tvControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btncopy"
        android:layout_alignEnd="@+id/btnsqrt"
        android:layout_alignLeft="@+id/btncopy"
        android:layout_alignRight="@+id/btnsqrt"
        android:layout_alignStart="@+id/btncopy"
        android:layout_marginBottom="19dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvControl"
        android:layout_alignEnd="@+id/btnsqrt"
        android:layout_alignLeft="@+id/tvControl"
        android:layout_alignRight="@+id/btnsqrt"
        android:layout_alignStart="@+id/tvControl"
        android:layout_marginBottom="28dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tvMemory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvResult"
        android:layout_alignEnd="@+id/tvResult"
        android:layout_alignRight="@+id/tvResult"
        android:layout_marginBottom="39dp"
        android:layout_toEndOf="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"
        android:text="_"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:id="@+id/btncopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn8"
        android:layout_alignLeft="@+id/btn7"
        android:layout_alignStart="@+id/btn7"
        android:backgroundTint="@color/buttons_color2"
        android:text="M"
        android:textColor="@android:color/background_dark" />

    <Button
        android:id="@+id/btnpaste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btncopy"
        android:layout_alignBottom="@+id/btncopy"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"
        android:backgroundTint="@color/buttons_color2"
        android:text="MMC" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvMemory"
        android:layout_toEndOf="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:text="Memory:"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnsqrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnsqr"
        android:layout_alignBottom="@+id/btnsqr"
        android:layout_toEndOf="@+id/btnsqr"
        android:layout_toRightOf="@+id/btnsqr"
        android:backgroundTint="@color/buttons_color2"
        android:text="âˆš" />

    <Button
        android:id="@+id/btnsqr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_alignBaseline="@+id/btnpaste"
        android:layout_alignBottom="@+id/btnpaste"
        android:layout_toEndOf="@+id/btnpaste"
        android:layout_toRightOf="@+id/btnpaste"
        android:backgroundTint="@color/buttons_color2"
        android:text="@string/x2" />

    <Button
        android:id="@+id/btnfact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn0"
        android:layout_alignBottom="@+id/btn0"
        android:layout_toEndOf="@+id/btn2"
        android:layout_toRightOf="@+id/btn2"
        android:backgroundTint="@color/buttons_color2"
        android:text="!" />

    <Button
        android:id="@+id/btndot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnequal"
        android:layout_alignBottom="@+id/btnequal"
        android:layout_toEndOf="@+id/btnclear"
        android:layout_toRightOf="@+id/btnclear"
        android:backgroundTint="@color/buttons_color2"
        android:text="." />

    <Button
        android:id="@+id/btnclearall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btndot"
        android:layout_alignLeft="@+id/btnclear"
        android:layout_alignStart="@+id/btnclear"
        android:backgroundTint="@color/buttons_color2"
        android:text="AC" />

</RelativeLayout>
